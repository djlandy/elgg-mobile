<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" 
        xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" 
        id="uk.co.skunkfishdesigns.elggmobile" 
        version="0.0.0.1" 
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0">
  <name>Elgg Mobile</name>
  <description>
    Elgg Mobile lets you connect to supported elgg-based social networks
  </description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">
    Apache Cordova Team
  </author>
  <icon src="icon.png" />
  <!-- <icon src="ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
  <icon src="mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
  <icon src="hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
  <icon src="xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" /> -->
  <content src="index.html" />
  <access origin="*" />
  <preference name="SplashScreen" value="screen" />
  <preference name="Orientation" value="portrait" />
  <preference name="Fullscreen" value="true" />
  <vs:features>
    <vs:feature>org.apache.cordova.device@0.2.9</vs:feature>
  </vs:features>
  <vs:platformSpecificValues>
    <vs:platformSpecificWidget platformName="windows8" />
  </vs:platformSpecificValues>
  <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.4.0" />
  <gap:plugin name="com.msopentech.azure-mobile-services" version="0.1.2" />
  <gap:plugin name="org.apache.cordova.device" version="0.2.3"/>
</widget>
